@model ParcialFinal.Models.Biblioteca

@{
    ViewBag.Title = "NuevaBiblioteca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NuevaBiblioteca</h2>

@using (Html.BeginForm("Create", "Biblioteca"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Biblioteca</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Titulo_Libro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulo_Libro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titulo_Libro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Autor_Libro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Autor_Libro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Autor_Libro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ISB_Libro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ISB_Libro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ISB_Libro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">GUARDAR</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "ListaBiblioteca")
</div>
